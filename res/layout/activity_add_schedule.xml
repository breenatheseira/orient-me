<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/asaTB_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Title" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/asaTV_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Start"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:weightSum="1" />

        <TextView
            android:id="@+id/asaDB_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:weightSum="1"
            android:onClick="onClick"
            android:clickable="true" />

        <TextView
            android:id="@+id/asaDB_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:weightSum="1"
            android:onClick="onClick"
            android:clickable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/asaTV_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/End"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:weightSum="1" />

        <TextView
            android:id="@+id/asaDB_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:weightSum="1"
            android:onClick="onClick"
            android:clickable="true" />

        <TextView
            android:id="@+id/asaDB_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:weightSum="1"
            android:onClick="onClick"
            android:clickable="true" />
    </LinearLayout>

    <EditText
        android:id="@+id/asaTB_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Location" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <TextView
            android:id="@+id/asaTV_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:weightSum="1" 
            android:text="@string/Alert"/>

        <ToggleButton
            android:id="@+id/asaSw_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"/>
    </LinearLayout>

    <EditText
        android:id="@+id/asaTA_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Notes"
        android:inputType="textMultiLine" />

</LinearLayout>