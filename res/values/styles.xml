<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- Ozbek (2013) Android: Background Change in Styles.xml [Online]. Available from: http://stackoverflow.com/questions/16901934/android-background-change-in-styles-xml [Accessed: 22 May 2015] -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="defaultbutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/darkblue</item>
        <item name="android:textColor">@color/accentyellow</item>
        <item name="android:gravity">center</item>
        <!-- Groppe (2012) Android - Margins Specified in Custom Style Not Taking Effect. [Online]. Available from: http://stackoverflow.com/questions/13167529/android-margins-specified-in-custom-style-not-taking-effect [Accessed: 22 May 2015 -->
        <item name="android:layout_margin">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainOuterLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="instructTextView" parent="@android:attr/textAppearanceMedium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>