<?xml version="1.0" encoding="utf-8"?>
<!-- DarthJDG (2014) Custom Indeterminate ProgressBar on Android. [Online]. Available from: http://codebin.co.uk/blog/custom-indeterminate-progressbar-on-android/ [Accessed: 22 May 2015] -->
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1440" >
 
    <shape
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="15dp"
        android:useLevel="false" >
        <size
            android:height="48dp"
            android:width="48dp" />
 
        <gradient
            android:centerColor="#81D4FA"
            android:centerY="0.5"
            android:endColor="#E1F5FE"
            android:startColor="#03A9F4"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>
